{
    "name": "app",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "postinstall": "npx jetify",
        "android": "react-native run-android",
        "ios": "react-native run-ios",
        "start": "react-native start",
        "test": "jest",
        "lint": "eslint .",
        "lint-fix": "eslint . --fix",
        "prettier:write": "npx prettier --write **/*.{js,json} && npx prettier --write *.{js,json}",
        "prettier:check": "npx prettier --check **/*.{js,json} && npx prettier --check *.{js,json}",
        "android-dev": "ENVFILE=.env.development react-native run-android --variant=DevelopmentDebug",
        "android-production": "ENVFILE=.env.production react-native run-android --variant=ProductionDebug",
        "android-staging": "ENVFILE=.env.staging react-native run-android --variant=StagingDebug",
        "ios-dev": "ENVFILE=.env.development react-native run-ios --scheme development --simulator='IPhone X 12.4'",
        "ios-production": "ENVFILE=.env.production react-native run-ios --scheme production --simulator='IPhone X 12.4'",
        "ios-staging": "ENVFILE=.env.staging react-native run-ios --scheme staging --simulator='IPhone X 12.4'",
        "build-android-dev": "cd android && ENVFILE=.env.development ./gradlew assembleDevelopmentRelease",
        "build-android-staging": "cd android && ENVFILE=.env.staging ./gradlew assembleStagingRelease",
        "build-android-production": "cd android && ENVFILE=.env.production ./gradlew assembleProductionRelease",
        "clear-android": "cd android && ./gradlew clean",
        "devices-ios": "xcrun simctl list devices",
        "devices-android": "adb devices",
        "deploy": "./deploy.sh"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged && npm run lint"
        }
    },
    "dependencies": {
        "@react-native-async-storage/async-storage": "1.13.2",
        "@react-native-community/art": "1.2.0",
        "@react-native-community/masked-view": "0.1.10",
        "@react-native-community/netinfo": "5.9.9",
        "@react-navigation/bottom-tabs": "5.10.6",
        "@react-navigation/core": "5.14.3",
        "@react-navigation/native": "5.8.4",
        "@react-navigation/stack": "5.12.3",
        "@shopify/restyle": "1.3.1",
        "axios": "0.21.0",
        "i18n-js": "3.8.0",
        "mobx": "6.0.3",
        "mobx-react-lite": "3.0.1",
        "mobx-state-tree": "4.0.1-rc.1",
        "moment": "2.29.1",
        "prop-types": "15.7.2",
        "querystring": "0.2.0",
        "react": "16.13.1",
        "react-native": "0.63.3",
        "react-native-android-open-settings": "1.3.0",
        "react-native-animatable": "1.3.3",
        "react-native-bootsplash": "3.0.1",
        "react-native-config": "1.4.0",
        "react-native-device-info": "7.0.2",
        "react-native-extra-dimensions-android": "1.2.5",
        "react-native-gesture-handler": "1.8.0",
        "react-native-image-blur-loading": "1.1.4",
        "react-native-image-progress": "1.1.1",
        "react-native-keyboard-aware-scroll-view": "0.9.3",
        "react-native-permissions": "3.0.0",
        "react-native-progress": "4.1.2",
        "react-native-reanimated": "1.13.1",
        "react-native-safe-area-context": "3.1.8",
        "react-native-screens": "2.12.0",
        "react-native-svg": "12.1.0"
    },
    "devDependencies": {
        "@babel/core": "7.12.3",
        "@babel/plugin-proposal-decorators": "7.12.1",
        "@babel/plugin-proposal-optional-chaining": "7.12.1",
        "@babel/runtime": "7.12.1",
        "@react-native-community/eslint-config": "2.0.0",
        "babel-jest": "26.6.2",
        "babel-plugin-module-resolver": "4.0.0",
        "babel-plugin-transform-remove-console": "6.9.4",
        "eslint": "7.12.1",
        "eslint-config-airbnb": "18.2.0",
        "eslint-config-prettier": "6.15.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jsx-a11y": "6.4.1",
        "eslint-plugin-prettier": "3.1.4",
        "eslint-plugin-react": "7.21.5",
        "eslint-plugin-react-hooks": "4.2.0",
        "eslint-plugin-react-native": "3.10.0",
        "husky": "4.3.0",
        "jest": "26.6.2",
        "metro-react-native-babel-preset": "0.63.0",
        "prettier": "2.1.2",
        "pretty-quick": "3.1.0",
        "react-test-renderer": "16.13.1"
    },
    "jest": {
        "preset": "react-native",
        "setupFiles": [
            "./config/test/jest-setup.js"
        ]
    }
}
